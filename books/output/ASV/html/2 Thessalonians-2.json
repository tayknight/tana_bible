    "verses": [
        {
            "verse_id": 53002001,
            "text": "\u00b6 Now we beseech you, brethren, <i>[a]</i>touching the <i>[b]</i>coming of our Lord Jesus Christ, and our gathering together unto him; ",
            "version": "ASV",
            "clsstr": "2Thess-2-1",
